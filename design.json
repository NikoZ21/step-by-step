  "colorPalette": {
    "description": "Complete color palette extracted from the Step-by-Step app",
    "primary": {
      "#1A1A1E": "Main background color",
      "#262629": "Card/modal background color",
      "#4A4A4E": "Secondary background, borders, inactive elements",
      "#4A90E2": "Primary accent color (blue)",
      "#00D4AA": "Success/progress color (green)",
      "#FF6B35": "Danger/remove color (orange-red)"
    },
    "text": {
      "#FFFFFF": "Primary text color",
      "#F8F8F8": "Secondary text color (slightly off-white)",
      "#B0B0B0": "Tertiary text color (gray)"
