    }
  },
  "designSystem": {
    "colorUsageGuidelines": {
      "background": {
        "primary": "Use #1A1A1E for main app background",
        "secondary": "Use #262629 for cards, modals, elevated surfaces",
        "tertiary": "Use #4A4A4E for input fields, inactive buttons, borders"
      },
      "text": {
        "primary": "Use #FFFFFF for main headings and important text",
        "secondary": "Use #F8F8F8 for body text and descriptions",
        "tertiary": "Use #B0B0B0 for secondary info, placeholders, subtle text"
      },
      "accent": {
        "primary": "Use #4A90E2 for primary actions, icons, highlights",
        "success": "Use #00D4AA for progress indicators, success states",
        "danger": "Use #FF6B35 for destructive actions, warnings"
      }
    },
    "componentPatterns": {
      "modals": {
        "overlay": "Always use rgba(0, 0, 0, 0.8) for modal overlays",
        "background": "Use #262629 for modal content background",
        "borders": "Use #4A4A4E for modal borders and internal dividers"
      },
      "buttons": {
        "primary": "Background #4A90E2, text #FFFFFF",
        "secondary": "Background #4A4A4E, text #4A90E2 or #FFFFFF",
        "danger": "Background #FF6B35, text #FFFFFF"
      },
      "progress": {
        "background": "#4A4A4E",
        "fill": "#00D4AA"
      }
    }
  },
  "futureThemeSupport": {
    "note": "This structure allows for easy theme switching by adding new theme objects (light, high-contrast, etc.) with the same color token structure",
    "implementation": "Components should reference colors via theme tokens rather than hardcoded hex values",
    "example": "Instead of backgroundColor: '#1A1A1E', use backgroundColor: theme.colors.background.primary"
  }
